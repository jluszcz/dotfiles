#!/usr/bin/env sh

skip_errors=false

# Parse flags
while [ $# -gt 0 ]; do
    case "$1" in
        -s|--skip-errors)
            skip_errors=true
            shift
            ;;
        -h|--help)
            echo "Usage: all [-s|--skip-errors] <command> [args...]"
            echo ""
            echo "Run a command in each subdirectory of the current directory."
            echo ""
            echo "Options:"
            echo "  -s, --skip-errors  Continue to next directory if command fails"
            echo "  -h, --help         Show this help message"
            exit 0
            ;;
        *)
            break
            ;;
    esac
done

# Exit on error unless skip_errors flag is set
if [ "$skip_errors" = false ]; then
    set -e
fi

for f in *; do
    if [ ! -d "$f" ]; then
        continue
    fi

    echo "$f"
    pushd "$f" > /dev/null
    if [ "$skip_errors" = true ]; then
        "$@" || echo "  (failed, continuing...)"
    else
        "$@"
    fi
    popd > /dev/null
done
